<% form_for( :user, :url => user_change_password_path( @user.id ), :html => { :method => :put }) do |f| %>

    <label>Current Password:</label> <%= password_field_tag "old_password" %><br />
    <label>New Password:</label> <%= password_field_tag "password" %><br />
    <label>Repeat New Password:</label> <%= password_field_tag "password_confirmation" %><br />
  <%= submit_tag "Change Password"%>
<% end %>