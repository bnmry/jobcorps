<% if @jobs %>
<h3 class="item-list">Your search results</h3>
    <table cellspacing="0" class="item-list">
		<% 
		odd_or_even = 0
		for job in @jobs 
			odd_or_even = 1 - odd_or_even
		%>
	  		<tr class="alt_row<%= odd_or_even %>">
	  			<th>
					<strong><%= link_to job.title, :action => "show", :id => job.id %></strong><br>
	  				<span class="description"><%= truncate(job.description, 65) %></span>
				</th>
				
				<td class="date">
					<%= distance_of_time_in_words(Time.now, job.created_at, true )%> ago<br>
					<span class="tags"><%= job.tags.collect{|tag| tag.name}.join(", ") %></span>
				</td>
				
	  		</tr>
	<% end %>
	</table>
<% end %>
